<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center_vertical|center_horizontal"
    android:padding="8dp"
    tools:context="whatsappclone.cursoandroid.com.whatsappclone.activity.CadastroUsuarioActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="113dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/usuario" />

    <EditText
        android:id="@+id/edit_text_cadastro_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Seu nome"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edit_text_cadastro_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit_text_cadastro_nome"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Seu e-mail"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/edit_text_cadastro_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit_text_cadastro_email"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Sua senha"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button_cadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit_text_cadastro_senha"
        android:layout_marginTop="16dp"
        android:text="@string/botao_cadastrar"
        android:theme="@style/botaoPadrao"/>
</RelativeLayout>
